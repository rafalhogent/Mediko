@model MedikoData.Entities.LogBook
@{
    ViewData["Title"] = "Delete";
}

<h1>Logboek verwijderen</h1>

<h3>Ben je zeker, dat je onderstaande logboek wilt verwijderen?</h3>
<div>
    <h4>Logboek @Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Field1)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Field1)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Field2)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Field2)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Field3)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Field3)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Unit1)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Unit1)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Unit2)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Unit2)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Unit3)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Unit3)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precision)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precision)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IconUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IconUrl)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LogBookId" />
        <input type="submit" value="Verwijderen" class="btn btn-outline-danger" /> 
        <a class="btn btn-secondary" asp-action="Index">Terug</a>
    </form>
</div>
