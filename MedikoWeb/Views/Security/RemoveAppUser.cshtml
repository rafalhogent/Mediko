@model IdentityUser
@{
    ViewData["Title"] = "Remove user";
}
<h2>User @Model.UserName verwijderen?</h2>
<form asp-action="RemoveAppUserConfirm"
      asp-route-id="@Model.Id" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="userbeheer" class="btn btn-primary">Cancel</a>
</form>