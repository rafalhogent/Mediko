            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuleren</button>
                @*<button  type="button" class="btn btn-danger">Zeker verwijderen</button>*@
                @*<a class="btn btn-danger" asp-action="RemoveUser" asp-route-id="@Model.UserId">Zeker verwijderen</a>*@
