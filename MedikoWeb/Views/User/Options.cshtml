@model UserOptionsViewModel

<h2 class="mt-3 mx-3 mb-2">
    <b>@Model.UserName</b>
    @{
        if (Model.PasswordEditingAllowed)
        {
            <a class="btn btn-sm btn-primary ms-2 mb-1" asp-action="ChangePassword" asp-controller="User">
            <i class="bi bi-lock-fill icon"></i>Wachtwoord wijzigen
            </a>
        }
    }

</h2>
<h6 class="mx-3"><i>@Model.UserId</i></h6>




@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="col alert alert-info alert-dismissible">
        @Model.Message
    </div>

}

<div class="my-5 mx-3">
    <h3>Logboeken
        <a class="btn btn-sm btn-primary ms-2 mb-1" asp-action="Create" asp-controller="LogBooks">
            <i class="bi bi-plus-circle icon"></i>Aanmaken</a>
    </h3>
    <form asp-action="UpdateChoosenLogbooks" method="post">
        <table class="table table-responsive table-hover">

            <tbody>
                @Html.HiddenFor(m=>m.UserName)
                @Html.HiddenFor(m=>m.UserId)
                @Html.EditorFor(a=>a.LogbookSelections)
            </tbody>

        </table>
        <div class="my-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-journal-bookmark-fill icon"></i>Opslaan
            </button>
        </div>

    </form>

</div>





